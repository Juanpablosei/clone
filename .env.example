# ===========================================
# Base de datos
# ===========================================
# URL de la base principal (Base 1 - producción/lectura pública)
DATABASE_URL="postgresql://usuario:password@localhost:5432/nombre_bd"

# URL de la base del editor (Base 2 - admin/edición). Si usas una sola BD, puede ser la misma que DATABASE_URL
DATABASE_URL_TARGET="postgresql://usuario:password@localhost:5432/nombre_bd_editor"

# Opcional: solo para scripts de sincronización entre bases (sync-content-base1-to-base2, etc.)
# DATABASE_URL_SOURCE="postgresql://..."

# ===========================================
# Autenticación (NextAuth)
# ===========================================
# Secreto para firmar cookies/tokens. Generar con: openssl rand -base64 32
AUTH_SECRET="tu-secreto-muy-largo-y-aleatorio"
# Alternativa (NextAuth reconoce ambos)
# NEXTAUTH_SECRET="tu-secreto-muy-largo-y-aleatorio"

# En Vercel: OBLIGATORIO para evitar bucle de redirects. URL exacta del deploy (ej. https://tu-app.vercel.app)
# NEXTAUTH_URL="https://tu-app.vercel.app"

# ===========================================
# Cloudinary (imágenes y medios)
# ===========================================
CLOUDINARY_CLOUD_NAME="tu-cloud-name"
CLOUDINARY_API_KEY="tu-api-key"
CLOUDINARY_API_SECRET="tu-api-secret"

# Opcional: solo si usas dos cuentas Cloudinary (origen/destino) en migraciones o sync
# CLOUDINARY_SOURCE_CLOUD_NAME="..."
# CLOUDINARY_SOURCE_API_KEY="..."
# CLOUDINARY_SOURCE_API_SECRET="..."
# CLOUDINARY_TARGET_CLOUD_NAME="..."
# CLOUDINARY_TARGET_API_KEY="..."
# CLOUDINARY_TARGET_API_SECRET="..."

# ===========================================
# Email (formulario de contacto y SMTP)
# ===========================================
SMTP_HOST="smtp.ejemplo.com"
SMTP_PORT="587"
SMTP_USER="tu-email@dominio.com"
SMTP_PASS="tu-password-smtp"

# Email donde se reciben los mensajes del formulario de contacto (opcional)
CONTACT_TO_EMAIL="contacto@tudominio.com"
# O expuesto en el cliente (opcional)
# NEXT_PUBLIC_CONTACT_EMAIL="contacto@tudominio.com"
